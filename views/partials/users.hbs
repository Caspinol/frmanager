<div class="modal modal-add">
  <div class="modal-add-body">
    <fieldset>
      <legend> Add new subscriber </legend>
      <form class="modal-add-body-form" action="/U/add" method="post">
        {{#each columns}}
        <input type="text" class="modal-add-{{Field}}"
               name="{{Field}}" placeholder="{{Field}}"/>
        {{/each}}
        <input type="submit" class="modal-add-submit btn"
               id="modal-add-submit" value="Create"/>
        <input type="button" class="modal-add-cancel btn"
               id="modal-add-cancel" value="Cancel"/>
      </form>
    </fieldset>
  </div>
</div>
